			"defaultValue": "https://saadlscovid7.dfs.core.windows.net/"
		},
		"ls_http_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "@{linkedService().baseUrl}"
		},
		"ls_http_ecdcsite_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "@{linkedService().baseSourceURL}"
		}
